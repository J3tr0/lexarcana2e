<form class='{{cssClass}}' autocomplete='off'>
	<header class='sheet-header'>
		<img
			src='{{item.img}}'
			data-edit='img'
			title='{{item.name}}'
			height='64'
			width='64'
		/>
		<h1><input
				name='name'
				type='text'
				value='{{item.name}}'
				placeholder='{{localize "Name"}}'
			/></h1>
	</header>
	<div class='sheet-content'>
		<table>
			<tr>
				<th>{{localize 'lexarcana2e.weapon.damage'}}</th>
				<th>{{localize 'lexarcana2e.weapon.encumbrance'}}</th>
				<th>{{localize 'lexarcana2e.weapon.difficulty'}}</th>
				<th>{{localize 'lexarcana2e.weapon.rangeName'}}</th>
				<th>{{localize 'lexarcana2e.weapon.featureName'}}</th>
				<th>{{localize 'lexarcana2e.weapon.expertus'}}</th>
			</tr>
			<tr>
				<td>
					<input
						type='text'
						name='system.damage'
						value='{{data.system.damage}}'
						data-dtype='Number'
					/>
				</td>
				<td>
					<input
						type='text'
						name='system.encumbrance'
						value='{{data.system.encumbrance}}'
						data-dtype='Number'
					/>
				</td>
				<td>
					<input
						type='text'
						name='system.difficulty'
						value='{{data.system.difficulty}}'
						data-dtype='Number'
					/>
				</td>
				<td>
					<select name='system.range'>
						{{#select data.system.range}}
							{{#each config.range as |name type|}}
								<option value='{{type}}'>{{localize
										name.label
									}}</option>
							{{/each}}
						{{/select}}
					</select>
				</td>
				<td>
					<select name='system.feature'>
						{{#select data.system.feature}}
							{{#each config.feature as |name type|}}
								<option value='{{type}}'>{{localize
										name.label
									}}</option>
							{{/each}}
						{{/select}}
					</select>
				</td>
				<td>
					<input
						type='checkbox'
						name='system.expertus'
						{{checked data.system.expertus}}
					/>
				</td>
			</tr>
		</table>
	</div>
</form>